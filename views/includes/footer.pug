//  Footer 
section#footer.wrapper
  .inner
    .split
      .content
        header
          h2 Connect
        p IoTrust focuses exclusively on innovative cold storage solutions that simplify digital asset management. Connect with us to learn more about the world's most advanced hardware wallets.
        // Begin Mailchimp Signup Form
        #mc_embed_signup
          form#mc-embedded-subscribe-form.validate(action='https://iotrusrt.us20.list-manage.com/subscribe/post?u=e49b2871df6358e2ada84541c&id=3d2cf843c4', method='post', name='mc-embedded-subscribe-form', target='_blank', novalidate='')
            #mc_embed_signup_scroll.row.gtr-uniform
              .mc-field-group.col-6.col-12-xsmall
                input#mce-EMAIL.required.email(type='email', value='email@address.com', name='EMAIL')
              .mc-field-group.col-6.col-12-xsmall
                input#mc-embedded-subscribe.primary.button(type='submit', value='Subscribe To Our Newsletter', name='subscribe')
              #mce-responses.clear
                #mce-error-response.response(style='display:none')
                #mce-success-response.response(style='display:none')
              div(style='position: absolute; left: -5000px;', aria-hidden='true')
                input(type='text', name='b_e49b2871df6358e2ada84541c_3d2cf843c4', tabindex='-1', value='')
        // End mc_embed_signup
      ul.contact-icons
        li
          a.icon.alt.fa-twitter(href='https://twitter.com/iotrustkr')
            span.label twitter.com/iotrustkr
        li
          a.icon.alt.fa-facebook(href='https://www.facebook.com/iotrustkr')
            span.label facebook.com/iotrustkr
        li
          a.icon.alt.fa-instagram(href='https://www.instagram.com/iotrustkr')
            span.label instagram.com/iotrustkr
        li
          a.icon.alt.fa-envelope(href='mailto:info@iotrust.kr')
            span.label info@iotrust.kr
